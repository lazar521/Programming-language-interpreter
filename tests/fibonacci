

// Here's a little more complex program

int running = 1;

fn int main()
{
    int res;

    while(running){
        print("Enter a number (not too large !): ");
        res = fib(readInt());
        print("Result is: " + intToStr(res));

        promptUser();
    }

    return 1;
}



fn int fib(int n)
{
    if (n <= 1){
        return n;
    }
    return fib(n - 1) + fib(n - 2);
}




fn void promptUser(){
    string input;
    int spin = 1;

    while(spin){
        print("Do you want to continue? yes/no");
        input = readStr();
        spin = 0;

        if(input == "no"){
            running = 0;
        }
        else{

            if(input == "yes"){
                print("continuing!");
            }
            else{
                print("incorrect input");
                spin = 1;
            }
        }
    }
}